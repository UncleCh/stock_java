<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.it.repository.h2.ConfigMapper">

    <resultMap id="Config" type="com.it.bean.Config"/>

    <select id="getConfig" resultMap="Config">
        SELECT * FROM config
        <where>
            <if test="key !=null">
                key= #{key}
            </if>
        </where>
    </select>

    <insert id="saveConfig">
      INSERT INTO config VALUES (#{key},#{val})
    </insert>


</mapper>